{
    "name": "create-nitro-project",
    "version": "0.0.1",
    "description": "A CLI to create production-grade React Native Nitro Modules",
    "author": "Athex Web3 <athexweb3@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/athexweb3/create-nitro-project.git"
    },
    "bugs": {
        "url": "https://github.com/athexweb3/create-nitro-project/issues"
    },
    "homepage": "https://github.com/athexweb3/create-nitro-project#readme",
    "keywords": [
        "react-native",
        "nitro",
        "modules",
        "generator",
        "cli",
        "scaffold"
    ],
    "type": "module",
    "bin": {
        "create-nitro-project": "./dist/index.js"
    },
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target node",
        "dev": "bun run ./src/index.ts",
        "start": "node ./dist/index.js",
        "check": "rm -rf my-nitro-module && bun dev"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.2.0",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "fs-extra": "^11.2.0",
        "handlebars": "^4.7.8",
        "ora": "^8.1.1",
        "execa": "^9.5.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.10.1",
        "typescript": "^5.7.2"
    }
}