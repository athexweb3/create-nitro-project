{
"name": "{{projectName}}-root",
"version": "0.1.0",
"type": "module",
"scripts": {
"clean": "bun --filter='*' clean",
"clean:deep": "bun --filter='*' clean:deep && del-cli node_modules",
"specs": "cd packages/{{projectName}} && bun run specs",
"bundle-install": "cd example && bun run bundle-install",
"pods": "cd example && bun run pods",
"start": "bun --cwd example start",
"postinstall": "git submodule update --init --recursive 2>/dev/null || true",
"bootstrap": "bun install && bun pods",
"tsc": "bun --filter='*' typescript",
"lint": "bun --filter='*' lint",
"lint:fix": "bun --filter='*' lint:fix",
"format": "bun --filter='*' format",
"format:fix": "bun --filter='*' format:fix",
"prepare": "husky && cd packages/{{projectName}} && bun run prepare",
"lint-staged": "lint-staged --no-stash",
"release": "./scripts/release.sh",
{{#if useCpp}}
"clang-format": "./scripts/clang-format.sh",
{{/if}}
"yalc": "cd packages/{{projectName}} && bun yalc push --replace --sig"
},
"lint-staged": {
"example/**/*.{js,jsx,ts,tsx}": [
"bun lint",
"bun format"
],
"packages/{{projectName}}/**/*.{js,jsx,ts,tsx}": [
"bun lint",
"bun format"
]
},
"devDependencies": {
"@eslint/compat": "1.2.8",
"husky": "^9.1.7",
"lint-staged": "^16.1.6",
"@eslint/js": "9.24.0",
"@release-it/bumper": "7.0.5",
"@release-it/conventional-changelog": "10.0.1",
"@types/node": "24.10.1",
"@typescript-eslint/eslint-plugin": "8.43.0",
"@typescript-eslint/parser": "8.43.0",
"eslint": "9.24.0",
"eslint-config-prettier": "10.1.8",
"eslint-plugin-prettier": "5.5.4",
"eslint-plugin-react-native": "5.0.0",
"nitro-codegen": "0.29.4",
"prettier": "3.5.3",
"release-it": "19.0.5",
"typescript": "5.8.3",
"typescript-eslint": "8.43.0",
"yalc": "^1.0.0-pre.53",
"del-cli": "^5.1.0",
"@react-native/gradle-plugin": "^0.76.0"
},
"packageManager": "bun@1.2.0",
"workspaces": [
"packages/{{projectName}}",
"example"
]
}